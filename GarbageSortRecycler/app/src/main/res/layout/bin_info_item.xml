<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:id="@+id/BIAN_HAO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="#A7B0B7"
            android:text="编号  "/>

        <TextView
            android:id="@+id/bin_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/BIAN_HAO"
            android:layout_alignBottom="@+id/BIAN_HAO"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:id="@+id/DI_DIAN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BIAN_HAO"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#A7B0B7"
            android:text="地点  "/>

        <TextView
            android:id="@+id/bin_loc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/DI_DIAN"
            android:layout_alignBottom="@+id/DI_DIAN"
            android:textStyle="bold"
            android:textColor="#000"/>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/TAKE_AWAY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#A7B0B7"
                android:textStyle="bold"
                android:text="外卖餐盒  "/>

            <TextView
                android:id="@+id/takeaway_weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/TAKE_AWAY"
                android:layout_alignBottom="@+id/TAKE_AWAY"
                android:textStyle="bold"
                android:textColor="#000"/>

            <ProgressBar
                android:id="@+id/takeaway_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_below="@+id/TAKE_AWAY"
                android:layout_marginTop="4dp"
                android:layout_width="150dp"
                android:layout_height="4dp"
                android:progressDrawable="@drawable/progress_drawable"/>

            <TextView
                android:id="@+id/EXPRESS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/takeaway_bar"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#A7B0B7"
                android:text="快递包装  "/>

            <TextView
                android:id="@+id/express_weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/EXPRESS"
                android:layout_alignBottom="@+id/EXPRESS"
                android:textStyle="bold"
                android:textColor="#000"/>

            <ProgressBar
                android:id="@+id/express_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_below="@+id/EXPRESS"
                android:layout_marginTop="4dp"
                android:layout_width="150dp"
                android:layout_height="4dp"
                android:progressDrawable="@drawable/progress_drawable"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/gradient_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>