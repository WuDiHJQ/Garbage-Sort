<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!--fragment淡出动画 透明度由1至0 从左边退出 时间400毫秒-->
    <alpha
        android:fromAlpha="1"
        android:toAlpha="0"
        android:duration="300"/>

    <translate
        android:fromXDelta="0%p"
        android:toXDelta="-100%p"
        android:duration="300"/>

</set>